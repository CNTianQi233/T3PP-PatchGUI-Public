<Application x:Class="PatchGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- WPF UI 主题 + 控件样式 -->
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
                <!-- 华丽主题切换按钮样式 -->
                <ResourceDictionary Source="Styles/ThemeSwitchStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ========== 主题相关画刷资源 (浅色模式默认值) ========== -->

            <!-- 背景色 -->
            <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F8F9FA" />
            <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="#F8F9FA" />

            <!-- 文字颜色 -->
            <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1A1A1A" />
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="#5C5C5C" />
            <SolidColorBrush x:Key="NavTextBrush" Color="#2D2D2D" />

            <!-- 卡片样式 -->
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FCFCFC" />
            <SolidColorBrush x:Key="CardBorderBrush" Color="#E8E8E8" />
            <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="CardHoverBrush" Color="#F5F5F5" />

            <!-- 强调色 -->
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4" />

            <!-- 导航悬停背景 -->
            <SolidColorBrush x:Key="NavHoverBackgroundBrush" Color="#0A000000" />

            <!-- 分隔线 -->
            <SolidColorBrush x:Key="DividerBrush" Color="#E5E5E5" />

            <!-- 阴影 -->
            <SolidColorBrush x:Key="ShadowBrush" Color="#1A000000" />

            <!-- WPF-UI theme brushes override (make them mutable/animatable) -->
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#1A1A1A" />
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#5C5C5C" />
            <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="#7A7A7A" />
            <SolidColorBrush x:Key="TextFillColorDisabledBrush" Color="#9E9E9E" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
